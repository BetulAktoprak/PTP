<script>
        document.getElementById('projectFiles').addEventListener('change', function () {
        const files = this.files;
        const list = document.getElementById('selectedFilesList');
        // list.innerHTML = ''; 

        if (files.length > 0) {
            const ul = document.createElement('ul');
            ul.classList.add('list-group');

            Array.from(files).forEach(file => {
                const li = document.createElement('li');
                li.classList.add('folder-box', 'd-flex', 'align-items-center');

                const now = new Date();
                const formattedDate = now.toLocaleString('tr-TR'); 

                li.innerHTML = `
                    <div class="d-flex align-items-center files-list">
                        <div class="flex-shrink-0 file-left"><i class="f-22 fa fa-folder font-primary"></i></div>
                        <div class="flex-grow-1 ms-3">
                            <h6>${file.name}</h6>
                            <p>${formattedDate}, ${Math.round(file.size / 1024)} KB</p>
                        </div>
                    </div>
                `;
                ul.appendChild(li);
            });
            list.appendChild(ul);
        } else {
            list.innerHTML = '<p class="text-muted">Seçilen dosya yok.</p>';
        }
    });

</script>

