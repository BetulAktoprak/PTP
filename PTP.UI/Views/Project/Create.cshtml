@model PTP.UI.Models.ProjectCreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="form theme-form">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="row g-3">

                                <div class="col-md-6">
                                    <label asp-for="ProjectTitle" class="form-label">Project Title</label>
                                    <input asp-for="ProjectTitle" class="form-control" placeholder="Project name *" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ClientName" class="form-label">Client name</label>
                                    <input asp-for="ClientName" class="form-control" placeholder="Name client or company name" />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="ProjectRate" class="form-label">Project Rate</label>
                                    <input asp-for="ProjectRate" class="form-control" placeholder="Enter project Rate" />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="ProjectType" class="form-label">Project Type</label>
                                    <select asp-for="ProjectType" class="form-select">
                                        <option value="Hourly">Hourly</option>
                                        <option value="Fixed">Fixed</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Priority" class="form-label">Priority</label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="Low">Low</option>
                                        <option value="Normal">Normal</option>
                                        <option value="High">High</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="ProjectSize" class="form-label">Project Size</label>
                                    <select asp-for="ProjectSize" class="form-select">
                                        <option value="Small">Small</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Large">Large</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="StartingDate" class="form-label">Starting date</label>
                                    <input asp-for="StartingDate" type="date" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="EndingDate" class="form-label">Ending date</label>
                                    <input asp-for="EndingDate" type="date" class="form-control" />
                                </div>
                                @if(Model.PersonnelList != null)
                                {
                                    <div class="col-md-8">
                                        <label asp-for="SelectedPersonnelIds" class="form-label">Personel Atamak İçin Seçiniz</label>
                                        @Html.DropDownListFor(m => m.SelectedPersonnelIds, Model.PersonnelList, "Personel seçiniz", new { @class = "form-control" })
                                        @* <label for="SelectedPersonnelIds">Personeller</label> *@
                                        @* <select asp-for="SelectedPersonnelIds" asp-items="Model.PersonnelList" class="form-control" multiple> *@
                                        @* </select> *@
                                    </div>
                                }
                                else
                                {
                                    <span>PErsonel listesi yüklenemedi</span>
                                }


                                <div class="col-12">
                                    <label asp-for="Details" class="form-label">Enter some Details</label>
                                    <textarea asp-for="Details" class="form-control" rows="3"></textarea>
                                </div>

                                <div class="col-12">
            
                                    <label class="form-label"><i class="icon-cloud-up"></i> Upload project file</label>
                                    <input type="file" name="ProjectFile" class="form-control" />
                                </div>


                            </div>

                            <div class="mt-4 d-flex justify-content-end">
                                <a asp-action="Index" class="btn btn-danger me-2">Cancel</a>
                                <button type="submit" class="btn btn-success">Add</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


